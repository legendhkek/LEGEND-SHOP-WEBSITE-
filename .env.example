# Legend Shop Environment Configuration Example
# Copy this file to .env and fill in your actual values

# MongoDB Connection
# Option 1: Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/legendshop
# Option 2: MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/legendshop
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secret Key for Authentication
# Generate a secure random string for production
# Example command: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here

# Server Port (default: 3000)
PORT=3000

# Environment Mode (development or production)
NODE_ENV=development
